{
  /* "coc.preferences.hoverTarget": "echo", */
  /* "coc.preferences.enableFloatHighlight": false, */
  "rust-analyzer.raLspServerPath": "/home/chaospie/.cargo/bin/ra_lsp_server",
  "prettier.formatterPriority": 100,
  "suggest.detailMaxLength": 200,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc",
    "rust",
    "yaml"
  ],
  "yaml.format.enable": true,
  "codeLens.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "signature.target": "echo",
  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"]
  },
  "suggest.noselect": false,
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "languageserver": {
    "efm": {
      /* go get github.com/mattn/efm-langserver/cmd/efm-langserver */
      /* yarn global add markdownlint-cli */
      "command": "efm-langserver",
      "filetypes": ["markdown"]
    },
    "gopls": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git/"]
    },
    "dart": {
      "command": "dart",
      "args": [
        "/usr/local/opt/dart/libexec/bin/snapshots/analysis_server.dart.snapshot",
        "--lsp"
      ],
      "filetypes": ["dart"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": ["compile_commands.json", ".ccls", ".root", ".git/"],
      "initializationOptions": {
        "cacheDirectory": "/tmp/ccls"
      }
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"],
      "ignoredRootPaths": ["~"]
    }
  },
  "java.format.settings.url": "/home/chaospie/.vim/plugged/redhat.java/eclipse-formatter.xml"
}
